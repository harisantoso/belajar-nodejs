<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Data contact tidak ada!<br />
        <a href="/contact" class="alert-link fw-normal">&laquo; Kembali ke daftar contact</a>.
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %> </h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.noTelepon %> </h6>
          <p class="card-text"><%= contact.email %> </p>
          <a href="/contact/edit/<%= contact.nama %>" class="badge bg-info text-decoration-none">Edit</a>
          <a href="/contact/delete/<%= contact.nama %>" class="badge bg-danger text-decoration-none"
            onclick="return confirm('yakin?');">Delete</a>
          <a href="/contact" class="card-link d-block mt-2 text-decoration-none">&laquo; Kemabli ke daftar contact</a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>